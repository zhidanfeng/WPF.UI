                                <RowDefinition Height="4" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Border Background="#3399FF" SnapsToDevicePixels="True" UseLayoutRounding="True"
                                    CornerRadius="3,3,0,0"/>
                            <TextBlock Grid.Row="1" Text="{Binding Header, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type WPF.UI:ZGroupBox}}}" 
                                       Foreground="Black" Margin="7,5" />
                        </Grid>
                    </DataTemplate>
                </WPF.UI:ZGroupBox.HeaderTemplate>
                <Button HorizontalAlignment="Center" VerticalAlignment="Center" Content="GroupBox" />
